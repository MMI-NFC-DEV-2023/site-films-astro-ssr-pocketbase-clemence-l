---
import { Debug } from "astro:components";
import Layout from "../../layouts/Layout.astro";
import LinkFilm from "../../components/LinkFilm.astro";
export const prerender = false

const listFilms = await Astro.locals.pb.collection("films")
    .getFullList();

---

<Layout pageTitle="Liste des personnes">
        <h1 class="text-center font-bold text-6xl">Tous nos films</h1>
        <ul class="flex mt-40">
            <li>
                {listFilms.map(film => <LinkFilm {...film} />)}
            </li>
        </ul>
    <!-- <Debug {listFilms} /> -->
</Layout>
