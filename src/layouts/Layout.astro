---
import "../styles/global.css";

interface Props {
	pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ pageTitle }</title>
	</head>
	<body class="bg-gray-200">
		<header class="bg-black text-white h-16 content-center px-20 w-screen fixed">
			<nav>
				<ul class="flex justify-between">
					<li>
						<a href="/">Accueil</a>
					</li>
					<li>
						<a href="/personnes">Personnes</a>
					</li>
					<li>
						<a href="/films">Films</a>
					</li>
					<li>
						<a href="/auth-password">S'authentifier</a>
					</li>
				</ul>
			</nav>
		</header>
		<main class="p-20 pt-36 bg-gray-100 h-screen shadow-md mx-62">
			<slot />
		</main>
	</body>
</html>